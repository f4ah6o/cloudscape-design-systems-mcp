{
  "name": "cdp-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server that provides comprehensive information about design systems created for React, currently focusing on AWS Cloudscape Design System",
  "main": "dist/index.js",
  "bin": {
    "cdp-mcp-server": "./dist/server.js"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "dev:sse": "PORT=3001 nodemon --exec ts-node server.ts --transport sse",
    "build": "pnpm clean && pnpm prepare && pnpm update-links && pnpm postbuild",
    "prebuild": "pnpm clean",
    "postbuild": "node -e \"require('fs').cpSync('src/components/data', 'dist/components/data', {recursive: true}); require('fs').chmodSync('dist/server.js', '755');\"",
    "prepare": "tsc -p tsconfig.build.json",
    "update-links": "uv run python scripts/update-markdown-links.py",
    "update-links:dry-run": "uv run python scripts/update-markdown-links.py --dry-run",
    "update-links:verbose": "uv run python scripts/update-markdown-links.py --verbose",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:e2e": "jest --selectProjects e2e",
    "test:tools": "jest --testMatch '**/tools.test.ts'",
    "test:resources": "jest --testMatch '**/resources.test.ts'",
    "test:roo": "jest --testMatch '**/roo-integration.test.ts'",
    "test:components": "jest --testMatch '**/component-details.test.ts'",
    "test:search": "jest --testMatch '**/search-engine.test.ts'",    
    "test:ci": "CI=true SKIP_LONG_RUNNING_TESTS=true jest",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm test:ci"
  },
  "keywords": [
    "mcp",
    "react",
    "design-system",
    "design-systems",
    "cloudscape",
    "components",
    "ui"
  ],
  "author": "",
  "license": "",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "fastmcp": "^1.22.4",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.19",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
